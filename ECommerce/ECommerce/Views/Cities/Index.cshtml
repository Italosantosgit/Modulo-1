@model IEnumerable<ECommerce.Models.City>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de cidades</h2>

<p>
    @Html.ActionLink("Criar Cidades", "Create",new { },new {@class="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Departaments.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Departaments.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.CityId }, new {@class = "btn btn-warning" });
            @Html.ActionLink("Detalhes", "Details", new { id = item.CityId }, new {@class ="btn btn-info" });
            @Html.ActionLink("Excluir", "Delete", new { id = item.CityId }, new {@class ="btn btn-danger" });
        </td>
    </tr>
}

</table>
